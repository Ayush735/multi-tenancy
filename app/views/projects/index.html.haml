%h1 Listing projects

%table.table.table-dark
  %thead
    %tr
      %th Title
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td
          %strong
            = project.title.upcase
        %td= link_to 'Show', project , class: 'btn btn-info'
        %td= link_to 'Edit', edit_project_path(project) , class: 'btn btn-success'
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Project', new_project_path, class: 'btn btn-primary'
